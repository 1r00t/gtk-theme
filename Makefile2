# Compiler for our sass. We use sassc
CC = sassc

# Flags:
# -M Omit the source map URL component
# -t expanded Use the `expanded` style for generated CSS.
CFLAGS = -M -t expanded

SRC_DIR = $(CURDIR)/src 

GTK3_TARGETS = gtk.css gtk-dark.css gtk-light.css gtk-slim.css gtk-slim-dark.css gtk-slim-light.css
GTK3_SRC = $(SRC_DIR)/gtk3
GTK3_VERSIONS = 3.22
GTK3_OLDEST_VERSION = 3.22
DARK = 'FALSE'
LIGHT = 'LIGHT'
SLIM = 'TRUE'

BUILD_OUTPUT = $(CURDIR)/build

all: gtk3

gtk3: $(GTK3_VERSIONS)

$(GTK3_VERSIONS): 
	mkdir -p $(BUILD_OUTPUT)/$(GTK_VERSIONS)
	cp -rt $(BUILD_OUTPUT/$(GTK_VERSIONS) $(GTK3_SRC)/common
	cp -rt $(BUILD_OUTPUT/$(GTK_VERSIONS) $(GTK3_SRC)/$(GTK3_VERSIONS)

$(GTK3_TARGET): setup-build
	
clean: 
	rm -r $(BUILD_OUTPUT)

.PHONY: clean
